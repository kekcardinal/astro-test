---
const { lang, index, href, text, currentPath } = Astro.props;

// Build the expected full URL for the nav item, including the language
const expectedUrl = `${href}`;

// Determine if the nav item is active by comparing the full URLs
const isActive = `${currentPath}?lang=${lang}` === expectedUrl ? 'active-nav' : '';
---
<div lang={lang} data-index={index} class="nav-item">
  <a class={isActive} href={href}>{text}</a>
</div>